external_url "http://{{ gitlab_address }}"
gitlab_rails['smtp_enable'] = true
gitlab_rails['smtp_address'] = "{{ gitlab_smtp_server }}"
gitlab_rails['smtp_port'] = {{ gitlab_smtp_port }}
gitlab_rails['smtp_user_name'] = "{{ gitlab_email }}"
gitlab_rails['smtp_password'] = "{{ gitlab_email_password }}"
gitlab_rails['smtp_domain'] = "{{ gitlab_email_domain }}"
gitlab_rails['smtp_authentication'] = 'login'
gitlab_rails['smtp_openssl_verify_mode'] = 'peer'
gitlab_rails['gitlab_email_from'] = "{{ gitlab_email }}"
gitlab_rails['gitlab_email_reply_to'] = "{{ gitlab_email }}"
gitlab_rails['incoming_email_enabled'] = true
gitlab_rails['incoming_email_address'] = "{{ gitlab_email }}"
gitlab_rails['incoming_email_email'] = "{{ gitlab_email }}"
gitlab_rails['incoming_email_password'] = "{{ gitlab_email_password }}"
gitlab_rails['incoming_email_host'] = "{{ gitlab_imap_server }}"
gitlab_rails['incoming_email_port'] = "{{ gitlab_imap_port }}"
gitlab_rails['incoming_email_ssl'] = true
gitlab_rails['incoming_email_start_tls'] = false
gitlab_rails['incoming_email_mailbox_name'] = 'inbox'
